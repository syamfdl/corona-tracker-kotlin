<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="me.syamfdl.coronatracker.fragments.MainFragment"
        android:label="Corona Tracker"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_mainFragment_to_provinceFragment"
            app:destination="@id/provinceFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="me.syamfdl.coronatracker.fragments.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/provinceFragment"
        android:name="me.syamfdl.coronatracker.fragments.ProvinceFragment"
        android:label="fragment_province"
        tools:layout="@layout/fragment_province" />
</navigation>